// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Song {
  id            String   @id @unique
  name          String
  artist        String
  duration      Int
  album         String
  spotifyUserId String
  user     User   @relation(fields: [spotifyUserId], references: [spotifyId])
}

model User {
  id           Int      @id @default(autoincrement())
  spotifyId    String   @unique
  name         String
  email        String
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  Songs        Song[]
}
